<div class="col-md-12">

  <a href="<%= Router.users_path(:index) %>" class="btn btn-default btn-sm">
    Back
  </a>

  <h1>
    User: <%= @user.content %>
  </h1>

  <div class="actions">
    <a href="<%= Router.users_path(:edit, @user.id) %>" class="btn btn-primary">
      Edit
    </a>

    <form action="<%= Router.users_path(:destroy, @user.id) %>" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
  </div>
</div>

<script>
  $("form").on("submit", function(event) {
    event.preventDefault();

    $that = this;
    $.ajax({
      url: $that.getAttribute('action'),
      type: "DELETE",
      data: $('form').serialize(),
      success: function(data) {
        window.location = data.location;
      }
    });
  });
</script>